<?xml version="1.0" encoding="UTF-8"?>
<policy>
	<general>
		<name>%POLICY_NAME%</name>
		<enabled>true</enabled>
		<frequency>Ongoing</frequency>
		<category>
			<name>%POLICY_CATEGORY%</name>
		</category>
		<trigger_checkin>true</trigger_checkin>
	</general>
	<scope>
		<computer_groups>
			<computer_group>
				<name>%GROUP_NAME%</name>
			</computer_group>
		</computer_groups>
	</scope>
	<package_configuration>
		<packages>
			<size>1</size>
			<package>
				<name>%pkg_name%</name>
				<action>Install</action>
			</package>
		</packages>
	</package_configuration>
	<scripts>
		<size>0</size>
	</scripts>
	<maintenance>
		<recon>true</recon>
	</maintenance>
	<user_interaction>
      <message_finish>%JSS_INVENTORY_NAME% wurde gerade erfolgreich aktualisiert. Bitte starte die Anwendung neu, um die neue Version zu nutzen.</message_finish>
    </user_interaction>
</policy>